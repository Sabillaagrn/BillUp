<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResultActivity">

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Judul -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:text="Struk berhasil di-scan"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Card Receipt -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="17dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/grey"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        tools:text="Nama Toko" />

                    <TextView
                        android:id="@+id/tv_transaction_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        tools:text="Tanggal Transaksi" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray" />

                    <!-- RecyclerView tetap scroll sendiri -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_receipt_detail" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray" />

                    <!-- Subtotal, Diskon, Pajak, Grand Total -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_label_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentStart="true"
                            android:text="Subtotal"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                        <TextView
                            android:id="@+id/tv_subtotal_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textStyle="bold"
                            tools:text="152.000,00" />

                        <TextView
                            android:id="@+id/tv_label_diskon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_label_subtotal"
                            android:layout_alignParentStart="true"
                            android:text="Diskon"
                            android:textColor="#D84315"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                        <TextView
                            android:id="@+id/tv_diskon_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_subtotal_value"
                            android:layout_alignParentEnd="true"
                            android:textStyle="bold"
                            android:textColor="#D84315"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            tools:text="-10.000,00" />

                        <TextView
                            android:id="@+id/tv_label_pajak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_label_diskon"
                            android:layout_alignParentStart="true"
                            android:text="Pajak"
                            android:textColor="@color/black"
                            android:textAppearance="?attr/textAppearanceBodyMedium" />

                        <TextView
                            android:id="@+id/tv_pajak_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_diskon_value"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            tools:text="9.120,00" />

                        <TextView
                            android:id="@+id/tv_label_grand_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_label_pajak"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="8dp"
                            android:text="Grand Total"
                            android:textColor="@color/black"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_grand_total_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_pajak_value"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold"
                            tools:text="161.120,00" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- OCR Debug -->
            <TextView
                android:id="@+id/tv_ocr_text_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="[Teks OCR mentah akan muncul di sini (Debug)]"
                android:textSize="10sp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Tombol tetap di bawah layar -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_retake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Foto Ulang"
            android:backgroundTint="@color/hijau"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Konfirmasi"
            android:textColor="@color/white"
            android:backgroundTint="@color/hijau"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
